---
import PrimeLink from './PrimeLink.astro';
import SecondaryLink from './SecondaryLink.astro';
import Section from './Section.astro';
---

<div class="img-container">
    <img class="mobile-img" src="/herobg.svg" />
</div>
<div class="wrapper">
    <Section>
        <div class="content">
            <h1 class="tagline">Trade Freely, <br />Trade Wisely</h1>
            <p class="subtagline">
                Enter the world of decentralized derivatives with DEDEX
            </p>
            <div class="buttons">
                <SecondaryLink
                    href="https://dedex.co/whitepaper"
                    text="Whitepaper"
                />
                <PrimeLink
                    href="https://dedex.co/twitter"
                    icon="/twitter.svg"
                    text="Follow us on Twitter"
                />
            </div>
            <p class="btw">â€” Built on Ethereum, deployed on Arbitrum</p>
        </div>
    </Section>
</div>

<style>
    .wrapper {
        height: 48rem;
        display: flex;
        justify-content: start;
        align-items: center;
        width: 100%;
        overflow: hidden;
        position: relative;
        background:
            linear-gradient(90deg, white 35%, rgba(255, 255, 255, 0)),
            url('/herobg.svg') center center / cover no-repeat;
        background-position: 100px -50px;
    }
    @media (min-width: 2000px) {
        .wrapper {
            background:
                linear-gradient(90deg, white 35%, rgba(255, 255, 255, 0)),
                url('/herobg.svg') center center / 100% no-repeat;
            background-position: 300px -100px;
        }
    }
    @media (min-width: 3000px) {
        .wrapper {
            background:
                linear-gradient(90deg, white 35%, rgba(255, 255, 255, 0)),
                url('/herobg.svg') center center / 100% no-repeat;
            background-position: 500px -500px;
        }
    }
    .container {
        margin: auto;
        position: relative;
        max-width: 90rem;
        width: min(100% - 1rem, 90rem);
    }
    .content {
        display: flex;
        max-width: 71rem;
        margin: auto;
        gap: 1.75rem;
        flex-direction: column;
    }
    .tagline {
        color: #001f3e;
        font-size: 4rem;
        font-family: Outfit;
        font-weight: 600;
        line-height: 4.375rem;
    }
    .subtagline {
        color: rgba(0, 31, 62, 0.6);
        font-size: 1rem;
        font-family: Manrope;
        font-weight: 500;
        line-height: 160%;
        letter-spacing: 0.01rem;
    }
    .buttons {
        display: flex;
        gap: 0.75rem;
        align-items: center;
    }
    .twitter {
        display: flex;
        padding: 1rem 2rem;
        align-items: center;
        gap: 0.5rem;
        flex-shrink: 0;
        border-radius: 12px;
        border: 1px solid #001f3e;
        background: #fff;
        color: #001f3e;
        text-align: center;
        font-size: 1rem;
        font-family: Manrope;
        font-weight: 600;
    }
    .btw {
        color: #001f3e;
        font-size: 0.875rem;
        font-family: Manrope;
        font-weight: 600;
    }
    .img-container {
        position: relative;
    }
    .img-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(0deg, white, rgba(255, 255, 255, 0));
    }
    .mobile-img {
        width: 100%;
        display: none;
    }
    @media (max-width: 640px) {
        .wrapper {
            background: none;
            height: auto;
        }
        .mobile-img {
            display: block;
        }
        .tagline {
            font-size: 3rem;
            line-height: 3.90625rem;
        }
        .twitter {
            font-size: 0.875rem;
        }
        .whitepaper {
            font-size: 0.875rem;
        }
    }
    @media (max-width: 410px) {
        .buttons {
            flex-direction: column;
        }
        .twitter {
            width: 100%;
            justify-content: center;
        }
        .whitepaper {
            width: 100%;
        }
    }
</style>
