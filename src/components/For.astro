---
export type Props = {
    img: string;
    title: string;
    text: string;
    id: string;
};
const { text, title, img, id } = Astro.props;
---

<div class="container" id={id}>
    <img src={img} alt={title} />
    <div class="content">
        <h2 class="title">{title}</h2>
        <p class="text">{text}</p>
    </div>
</div>

<style>
    .container {
        height: 20rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    .content {
        display: flex;
        gap: 1.5rem;
        width: 50%;
        flex-direction: column;
    }
    img {
        width: 40%;
        display: block;
        max-height: 100%;
        height: 100%;
    }
    .title {
        color: #001f3e;
        font-size: 3.125rem;
        font-family: Outfit;
        font-weight: 600;
    }
    .text {
        color: rgba(0, 31, 62, 0.6);
        font-size: 1rem;
        font-family: Manrope;
        font-weight: 500;
        line-height: 160%;
        letter-spacing: 0.01rem;
    }
    @media (max-width: 768px) {
        .container {
            flex-direction: column;
            height: auto;
        }
        .content {
            margin-top: 2rem;
            width: 100%;
        }
        img {
            width: 80%;
        }
        .title {
            font-size: 2.25rem;
        }
    }
</style>
